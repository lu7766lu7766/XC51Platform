    constructor(){
        super();

        this._text = ToolMrg.getText(28,0,32,0x333333);
        this.addChild(this._text);
        this._text.height = 70;
        this._text.verticalAlign = egret.VerticalAlign.MIDDLE;

        this.setDB();
    }

    public aa():void{
        this._text.text = `19158期 4 3 7`;
    }

    private _mShareC: egret.Shape;
	/**适配处理 */
	private setDB(): void {
		this._mShareC = new egret.Shape();
		this._mShareC.graphics.beginFill(0xffffff, 1);
		this._mShareC.graphics.drawRect(0, -this.y, GameMain.getInstance.StageWidth, 70);
		this.addChildAt(this._mShareC, 0);
    }
}

class Circle extends egret.DisplayObjectContainer{
    private _id;
    /**所属类型 */
    public type;
    private _img:egret.Bitmap;
    private _num:egret.TextField;
    private _numType=false;
     private _isInterception = false;

    constructor(id,type){
        super();

        this.touchEnabled = true;
        this._id = id;
        this.type = type;

        this._img = new egret.Bitmap();
        this.addChild(this._img);
        RES.getResByUrl("resource/assets/images/ui/hmbg_nor_home@2x.png",(e)=>{this._img.$setBitmapData(e);},this);

        this._num = ToolMrg.getText(0,0,36,0xF72E52,80);
        this.addChild(this._num);
        this._num.height = 80;
        this._num.verticalAlign = egret.VerticalAlign.MIDDLE;
        this._num.textAlign = egret.HorizontalAlign.CENTER;
        this._num.text = id+"";

        this.anchorOffsetX = this.width*0.5;
        this.anchorOffsetY = this.height*0.5;
    }

    private changeItem():void{
        if(this.type<10){
            if (this.type == 0) {
                let item = ThreeBox.getInstance.oneItem;
                if (this._numType)
                    item.push(this._id);
                else {
                    let aa = [];
                    for (let i = 0; i < item.length; i++) {
                        if (item[i] != this._id)
                            aa = aa.concat(item[i]);
                    }
                    ThreeBox.getInstance.oneItem = aa;
                }
            } else if (this.type == 1) {
                let item = ThreeBox.getInstance.twoItem;
                if (this._numType)
                    item.push(this._id);
                else {
                    let aa = [];
                    for (let i = 0; i < item.length; i++) {
                        if (item[i] != this._id)
                            aa = aa.concat(item[i]);
                    }
                    ThreeBox.getInstance.twoItem = aa;
                }
            } else if (this.type == 2) {
                let item = ThreeBox.getInstance.threeItem;
                if (this._numType)
                    item.push(this._id);
                else {
                    let aa = [];
                    for (let i = 0; i < item.length; i++) {
                        if (item[i] != this._id)
                            aa = aa.concat(item[i]);
                    }
                    ThreeBox.getInstance.threeItem = aa;
                }
            }
            ThreeBox.getInstance.changeItem();
        }else{
            if(this.type==10){
                let item = FiveBox.getInstance.oneItem;
                if (this._numType)
                    item.push(this._id);
                else {
                    let aa = [];
                    for (let i = 0; i < item.length; i++) {
                        if (item[i] != this._id)
                            aa = aa.concat(item[i]);
                    }
                    FiveBox.getInstance.oneItem = aa;
                }
            }else if(this.type==11){
                let item = FiveBox.getInstance.twoItem;
                if (this._numType)
                    item.push(this._id);
                else {
                    let aa = [];
                    for (let i = 0; i < item.length; i++) {
                        if (item[i] != this._id)
                            aa = aa.concat(item[i]);
                    }
                    FiveBox.getInstance.twoItem = aa;
                }
            }else if(this.type==12){
                let item = FiveBox.getInstance.threeItem;
                if (this._numType)
                    item.push(this._id);
                else {
                    let aa = [];
                    for (let i = 0; i < item.length; i++) {
                        if (item[i] != this._id)
                            aa = aa.concat(item[i]);
                    }
                    FiveBox.getInstance.threeItem = aa;
                }
            }else if(this.type==13){
                let item = FiveBox.getInstance.fourItem;
                if (this._numType)
                    item.push(this._id);
                else {
                    let aa = [];
                    for (let i = 0; i < item.length; i++) {
                        if (item[i] != this._id)
                            aa = aa.concat(item[i]);
                    }
                    FiveBox.getInstance.fourItem = aa;
                }
            }else if(this.type==14){
                let item = FiveBox.getInstance.fiveItem;
                if (this._numType)
                    item.push(this._id);
                else {
                    let aa = [];
                    for (let i = 0; i < item.length; i++) {
                        if (item[i] != this._id)
                            aa = aa.concat(item[i]);
                    }
                    FiveBox.getInstance.fiveItem = aa;
                }
            }
            FiveBox.getInstance.changeItem();
        }
    }

    private touchDown():void{
        if(this._numType){
            this.clearInfo();
        }else{
            this.selectInfo();
            this.changeSome();
        }
    }

    public selectInfo():void{
        this._numType = true;
        this._num.textColor = 0xffffff;
        RES.getResByUrl("resource/assets/images/ui/hmbg_home@2x.png",(e)=>{this._img.$setBitmapData(e);},this);
        this.changeItem();
    }

    private changeSome():void{
        this._img.scaleX
        this._img.touchEnabled = false;
        egret.Tween.get(this).to({scaleX:0.8,scaleY:0.8},100).call((e)=>{
            egret.Tween.get(this).to({scaleX:1,scaleY:1},200,egret.Ease.circInOut).call(()=>{
                this._img.touchEnabled = true;
            });
        });
    }

    public clearInfo():void{
        this._numType = false;
        this._num.textColor = 0xF72E52;
        RES.getResByUrl("resource/assets/images/ui/hmbg_nor_home@2x.png",(e)=>{this._img.$setBitmapData(e);},this);
        this.changeItem();
    }

    public addInterception():void{
        if(!this._isInterception){
            this.addEventListener(egret.TouchEvent.TOUCH_TAP,this.touchDown,this);
            this._isInterception = true;
        }
    }

    public removeInterception():void{
        if(this._isInterception){
            this.removeEventListener(egret.TouchEvent.TOUCH_TAP,this.touchDown,this);
            this._isInterception = false;
        }
    }
}