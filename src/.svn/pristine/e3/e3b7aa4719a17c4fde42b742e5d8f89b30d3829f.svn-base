/**方块id 长度 高度 居中内容 上、下内容 上内容y轴 下内容y轴 */
class Block extends egret.DisplayObjectContainer{
    public id;
    public selectType = false;
    private _text:egret.TextField;
    private _box:egret.Shape;
    private _bjBox:egret.Shape;
    private _topText:egret.TextField;
    private _downText:egret.TextField;
    private _height;
    private _width;

    constructor(id:number,width:number,height:number,text?:string,top?:string,down?:string,topY?,downY?){
        super();
        this.touchEnabled = true;
        this.id = id;
        this._width = width;
        this._height = height;

        this._bjBox = new egret.Shape();
        this.addChild(this._bjBox);
        this._bjBox.graphics.beginFill(0x979797);
        this._bjBox.graphics.drawRect(0,0,width,height);

        this._box = new egret.Shape();
        this.addChild(this._box);
        this._box.graphics.beginFill(0xffffff);
        this._box.graphics.drawRect(1.5,1.5,width-3,height-3);

        this._text = ToolMrg.getText(1.5,1.5,24,0x333333,width-3);
        this.addChild(this._text);
        this._text.height = height-3;
        this._text.verticalAlign = egret.VerticalAlign.MIDDLE;
        this._text.textAlign = egret.HorizontalAlign.CENTER;
        if(text!=undefined)
            this._text.text = text;

        this._topText = ToolMrg.getText(1.5,7,24,0x333333,width-3);
        this.addChild(this._topText);
        this._topText.textAlign = egret.HorizontalAlign.CENTER;
        if(topY!=undefined)
            this._topText.y = topY;
        if(top!=undefined)
            this._topText.text = top;

        this._downText = ToolMrg.getText(1.5,36,20,0x333333,width-3);
        this.addChild(this._downText);
        this._downText.textAlign = egret.HorizontalAlign.CENTER;
        if(downY!=undefined)
            this._downText.y = downY;
        if(down!=undefined)
            this._downText.text = down;
    }

    public aa(text?,top?,down?):void{
        if(text!=undefined)
            this._text.text = text;
        if(top!=undefined)
            this._topText.text = top;
        if(down!=undefined)
            this._downText.text = down;
    }

    public clear():void{
        this.selectType = false;
        this.changeCss();
    }

    public changeCss():void{
        this._box.graphics.clear();
        this._bjBox.graphics.clear()
        let num:number;
        if(this.selectType){
            this._box.graphics.beginFill(0xF72E52);
            this._bjBox.graphics.beginFill(0xffffff);
            num = 0xffffff;
        }else{
            this._box.graphics.beginFill(0xffffff);
            this._bjBox.graphics.beginFill(0x979797);
            num = 0x333333;
        }
        this._topText.textColor = num;
        this._downText.textColor = num;
        this._text.textColor = num;
        this._box.graphics.drawRect(1.5,1.5,this._width-3,this._height-3);
        this._bjBox.graphics.drawRect(0,0,this._width,this._height);
    }

}