class UserData {
	private static _mInstance:UserData;
	public static get getInstance():UserData{
		if(UserData._mInstance == undefined)
			UserData._mInstance = new UserData();
		return UserData._mInstance;
	}
	/**玩家id */
	public userId:string = "119";
	/**玩家密钥id */
	public orderId:string = "5505JU7V11RhY15uB2998557jKfL84kvg9i7EH4T";
	/**玩家key */
	public key:string = "gAw8Wd0UcL4SoxmzQMIDuav53";
	/**游客账号 */
	public touristNum="";
	/**是否新玩家 */
	public isNew:number = 0;
	/**用户绑定手机 */
	public photo:string="";
	/**玩家登陆code */
	public code:string = "";
	/**用户头像 */
	public userImgUrl: string = "";
	/**用户昵称 */
	public userName: string = "啊啊";
	/**是否绑定微信 0未绑定 1已绑定 */
	public isWx:string="0";
	/**性别 */
	public gender:string = "1";
	/**省 */
	public province:string = "广东";
	/**市 */
	public city:string = "肇庆";
	/**是否游客登录 1游客 2正式账号模式*/
	public userType:number = 1;
	/**粉丝数 */
	public fans:string="0";
	/**关注量 */
	public concern:string="";
	/**当前金币 */
	private _mGold:number = 0;
	/**当前球币*/
	private _mQQGold:number = 0;
	/**当前代金券*/
	private _mDJQGold:number = 0;
	/**当前佣金 */
	private _YJGold:number = 0;

	private constructor() {
	}

	/**金币 */
	public getGold():number{
		return this._mGold;
	}

	public setGold(value:number):void{
		this._mGold = value;

		CustEventMrg.getInstance.dispatch(CustEventType.EventType_GoldFresh);
	}

	public addGold(value:number):void{
		this._mGold += value;

		CustEventMrg.getInstance.dispatch(CustEventType.EventType_GoldFresh);
	}

	public subGold(value:number):boolean{
		this._mGold -= value;
		CustEventMrg.getInstance.dispatch(CustEventType.EventType_GoldFresh);
		return true;
	}

	public multGold(value:number):boolean{
		this._mGold *= value;
		CustEventMrg.getInstance.dispatch(CustEventType.EventType_GoldFresh);
		return true;
	}

	public divGold(value:number):boolean{
		this._mGold /=value;
		CustEventMrg.getInstance.dispatch(CustEventType.EventType_GoldFresh);
		return true;
	}

	public getDJQGold():number{
		return this._mDJQGold;
	}
	public setDJQGold(obj):void{
		this._mDJQGold = obj;
	}

	public getQQGold():number{
		return this._mQQGold;
	}
	public setQQGold(obj):void{
		if(obj==""||obj==undefined){
			this._mQQGold = 0;
		}else{
			this._mQQGold = obj;
		}
	}

	public getYJGold():number{
		return this._YJGold;
	}
	public setYJGold(obj):void{
		this._YJGold = obj;
	}

	public static setNews(key?,pwd?):void{
		if(key!=undefined && pwd!=undefined){
			UserData.getInstance.key = key;
			UserData.getInstance.orderId = pwd;
		}
		Choose.getInstance.sendHttp(10008)
	}

}